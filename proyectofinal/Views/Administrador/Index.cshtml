@model IEnumerable<proyectofinal.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Lista de usuarios</h2>

<p>
Usuarios registrados
</p>
<div>
    <a asp-controller="Home" asp-action="Administrador"><button type="button" id="btn4">Seleccionar otra acci&oacuten</button></a>
</div>
<div>
    <h3><a asp-action="AdmiRegister">Registrar nuevo Usuario</a></h3>
</div>
<hr />
<div id="Caja_admi">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nombre Completo
                </th>
                <th>
                    Nombre de usuario
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Contraseña
                </th>
                <th>
                    Numero de telefono
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompletoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <p>******************</p>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>